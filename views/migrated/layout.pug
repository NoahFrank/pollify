doctype html
html(lang='en' style="margin: 0; height: 100%;")
    head
        meta(charset='UTF-8')
        meta(name='viewport', content="width=device-width, initial-scale=1")
        title= title
        link(rel='stylesheet', href='/css/style.css')
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.4/css/bulma.min.css")
        script(defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js")

        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js")
        block css
        block js

    body(style="margin: 0; height: 100%;").has-navbar-fixed-top
        include navbar
        div(style="margin: 0; height: 100%;").is-medium.has-background-white
            div(style="height: 100%;").main.container.has-background-white
                block content
